<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="message" class="com.wyett.springdemo.annotationbean.eventhandler.Message">
    </bean>

    <bean id="startEventHandler"
          class="com.wyett.springdemo.annotationbean.eventhandler.StartEventHandler"></bean>

    <bean id="stopEventHandler"
          class="com.wyett.springdemo.annotationbean.eventhandler.StopEventHandler"></bean>

</beans>